<%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, size: 140 %>
      <%= f.submit "edit" %>
    </div>
  
    <div class="form-group">
      <%= f.submit "Update Post", class: 'btn btn-primary' %>
    </div>
<% end %>
  
  <%= link_to 'Back', posts_path, class: 'btn btn-secondary' %>
  