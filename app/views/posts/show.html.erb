
<h3>Post</h3>

<div class="post">
  <p><%= @post.body %></p>
  <p><%= @post.created_at %></p>

  <% if user_signed_in? %>
    <% if current_user.already_liked?(@post) %>
       <%= link_to post_like_path(@post), method: :delete do %>
         <i class="fas fa-heart"></i><%= @post.likes.count %>
       <% end %>
     <% else %>
        <%= link_to post_likes_path(@post), method: :post do %>
          <i class="fas fa-heart"></i><%= @post.likes.count %>
        <% end %>
      <% end %>
    <% else %>
      <i class="far fa-heart"></i><%= @post.likes.count %>
    <% end %>

    <%= link_to "-編集-edit", edit_post_path(@post.id) %>
    <%= link_to "-削除-delete", post_path(@post.id), method: :delete, data: { confirm: "Can I realli delete it?" } %>

 <% if @post.present? %>
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, size: 140 %>
    </div>
    <div class="form-group">
      <%= f.submit "Update Post", class: 'btn btn-primary' %>
    </div>
  <% end %>
 <% else %>
  <p>Post not found.</p>
 <% end %>

 </div>

<h2>いいねしたユーザー</h2>
<% @post.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

\

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<% @post.tags.each do |tag| %>
  <span><%= tag.name %></span>
<% end %>

<%= link_to "Tweet一覧に戻る", posts_path %>